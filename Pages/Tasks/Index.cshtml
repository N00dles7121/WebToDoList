@page
@model WebApp.Pages.Tasks.Index
@{

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
</head>

<body class="Index">
    <h2>All Tasks:</h2>
    <a class='btn btn-success btn-sm' href="/Tasks/Create">New</a>
    <ul class="accordion">
        @foreach (var task in Model.taskList)
        {
            <li>
                <input type="radio" name="accordion" id="@task.Id">
                <label for="@task.Id" class="IndexLabel">
                    <h3 class="TaskBody">@task.Body</h3>
                    <div class="TaskButtons">
                        <a class="btn btn-primary btn-sm" id="task" href="/Tasks/Edit?id=@task.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" id="task" href="/Tasks/Delete?id=@task.Id">Delete</a>
                    </div>
                </label>
                <div class="content">
                    <p>@task.Description</p>
                    <ul class="date-container">
                        <li id="created-on">
                            Created On: @task.CreatedOn
                        </li>
                        <li id="edited-on">
                            @if (task.EditedOn.ToString() == "")
                            {

                            }
                            else
                            {
                                <div>Last edited: @task.EditedOn</div>
                            }
                        </li>
                    </ul>
                </div>
            </li>
        }
    </ul>
</body>

</html>