@page
@model WebApp.Pages.Tasks.Index
@{

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
</head>

<body class="Index">
    <h2>All Tasks:</h2>
    <a class='btn btn-success btn-sm' href="/Tasks/Create">New</a>
    <ul class="accordion">
        @foreach (var item in Model.taskList)
        {
            <li>
                <input type="radio" name="accordion" id="@item.taskId">
                <label for="@item.taskId" class="IndexLabel">
                    <h3 class="TaskBody">@item.taskBody</h3>
                    <div class="TaskButtons">
                        <button class="btn btn-primary btn-sm" id="task" href="/Tasks/Edit?id=@item.taskId">Edit</button>
                        <button class="btn btn-danger btn-sm" id="task" href="/Tasks/Delete?id=@item.taskId">Delete</button>
                    </div>
                </label>
                <div class="content">
                    <p>@item.taskDescription</p>
                    <ul class="date-container">
                        <li id="created-on">
                            Created On: @item.taskCreatedOn
                        </li>
                        <li id="edited-on">
                            @if (item.taskEditedOn == "")
                            {

                            }
                            else
                            {
                                <div>Last edited: @item.taskEditedOn</div>
                            }
                        </li>
                    </ul>
                </div>
                <div class="overlay">
                    <div class="popup-content">
                        <div class="content-container">
                            <h2 id="title">Delete Task</h2>
                            <p id="question">Are you sure you want to permanently delete this task?</p>
                            <p id="task-body"><strong>@item.taskBody</strong></p>
                            <div class="popup-btns">
                                <button class="btn-confirm">1</button>
                                <button class="btn-close">2</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</body>

</html>